<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.myuni.MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.018"
        app:srcCompat="@drawable/uniba" />

    <Button
        android:id="@+id/bTimeTable"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="109dp"
        android:background="@color/colorAccent"
        android:text="TIMETABLE"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:layout_width="295dp"
        android:layout_height="229dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="44dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/linkVC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:autoLink="all"

            android:clickable="true"
            android:text="https://vc.uni-bamberg.de"
            tools:layout_editor_absoluteX="52dp"
            tools:layout_editor_absoluteY="329dp" />

        <TextView
            android:id="@+id/linkUnivis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"

            android:autoLink="all"
            android:clickable="true"
            android:text="http://univis.uni-bamberg.de"

            tools:layout_editor_absoluteX="52dp"
            tools:layout_editor_absoluteY="358dp" />

        <TextView
            android:id="@+id/linkFlexNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"

            android:autoLink="all"
            android:clickable="true"
            android:text="https://flexnow.zuv.uni-bamberg.de"
            tools:layout_editor_absoluteX="52dp"
            tools:layout_editor_absoluteY="458dp" />

        <TextView
            android:id="@+id/linkOutlook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:autoLink="all"

            android:clickable="true"
            android:text="https://o365.uni-bamberg.de"
            tools:layout_editor_absoluteX="52dp"
            tools:layout_editor_absoluteY="388dp" />

        <TextView
            android:id="@+id/linkBib"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:autoLink="all"

            android:clickable="true"
            android:text="https://katalog.ub.uni-bamberg.de"
            tools:layout_editor_absoluteX="52dp"
            tools:layout_editor_absoluteY="425dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
